tz-white = hsla(219, 20%, 84%, 1)
tz-gray = hsla(200, 19%, 18%, 1)
tz-blue = hsla(175, 32%, 58%, 1)

#name
  font-size 4rem
  line-height 1.2
  text-align center
  border 4px solid tz-white
  width: intrinsic
  width: fit-content
  width: -moz-fit-content
  width: -webkit-fit-content
  margin: 0 auto;
  padding: 20px

body
  font-family "Avenir", "Helvetica", sans-serif
  background-color: tz-gray
  font-weight: lighter
  color: tz-white
  margin-top 40px

#content-tabs
  position relative
  min-height 200px /* This part sucks */
  clear both
  display flex
  justify-content space-around

  margin 40px auto
  max-width 700px
  line-height 1.6
  font-size 1.4rem
  padding 0 10px

  .content-tab
    float right

  .content-tab label
    background tz-gray
    padding 10px
    margin-left -1px
    position relative
    left 1px
    cursor pointer

  .content-tab [type=radio]
    display none

  .content
    position absolute
    top 32px
    left 0
    background tz-gray
    right 0
    bottom 0
    padding 20px
    display none

  [type=radio]:checked ~ label
    color tz-blue

  [type=radio]:checked ~ label ~ .content
    display initial

a
  color tz-blue
  text-decoration none
  transition border-bottom 1s
  border-bottom 0px solid tz-blue

  position relative
  overflow hidden

  &:before
    content ""
    position absolute
    z-index 1
    left 50%
    right 50%
    bottom 0
    background tz-blue
    height 2px
    transition-property "left, right"
    transition-duration 0.09s
    transition-timing-function ease-out

  &:hover,
  &:focus,
  &:active
    &:before
      left 0
      right 0


#pic
  border-radius 12.5%
  transition all .5s cubic-bezier(0.075, 0.82, 0.165, 1)

.pic-normal
  width 200px
  height 200px
  border 3px solid white


.pic-small
  width 50px
  height 50px
  border 1px solid white

.job
  > .first-line
    display flex

    @media screen and (max-width: 599px)
      flex-flow column

    @media screen and (min-width: 600px)
      flex-flow row

    > .title
      flex 2 0 0
      font-weight 800

    > .period
      flex 1 0 0
      color #0af
      font-size 0.8em
      display flex
      flex-flow row

      @media screen and (min-width: 600px)
        align-self center

      > .start
        @media screen and (min-width: 600px)
          flex 4 0 0
          text-align right

      > .dash
        &:before
          content "â€“"

        @media screen and (min-width: 600px)
          flex 1 0 0
          text-align center

        @media screen and (max-width: 599px)
          margin 0 0.5em

      > .end
        @media screen and (min-width: 600px)
          flex 1 0 0
          text-align left

  > .second-line
    display flex

    > .company
      font-size 0.8em
      align-self center

  > .third-line
    display flex
    align-items center

    > .blurb
      color #567



.project-list,
.contact-list
  list-style none
  padding-left 0

  > li
    > .title
      font-weight 800
    > .status
      font-size 0.8em
    > .blurb
      color #567
